<%= form_for(@building) do |f| %>
  <% if @building.errors.any? %>
    <% @building.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>Внимание!</strong> <%= message %>
      </div>
    <% end %>
  <% end %>
  <div class="form-group">
    <label for="name">Название</label>
    <%= f.text_field :name, class: 'form-control', id: 'name', placeholder: 'Введите название' %>
  </div>

  <div class="form-group">
    <label for="description">Описание</label>
    <%= f.text_area :description, rows:6, class: 'form-control', id: 'adress', placeholder: 'Описание застройщика' %>
  </div>
  <div class="form-group">
    <label for="description">Застройщик</label>
    <%= f.collection_select :developer_id, Developer.all, :id, :name, {:prompt => 'Выберите застройщика...'}, {:class=>'form-control'} %>

  </div>



  <%= f.submit  class: 'btn btn-default' %>
<% end %>
