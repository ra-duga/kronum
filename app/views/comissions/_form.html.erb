<%= form_for(@comission) do |f| %>
  <% if @comission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comission.errors.count, "error") %> prohibited this comission from being saved:</h2>

      <ul>
      <% @comission.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :is_episode %><br>
    <%= f.check_box :is_episode, id: 'toggle-event' %>
  </div>
<div id="console-event" class="collapse">
  <div class="field">
    <%= f.label :start_epizode %><br>
    <%= f.text_field :start_epizode, 'data-provide' => 'datepicker', class: 'datepicker' %>
  </div>
  <div class="field">
    <%= f.label :end_epizode %><br>
    <%= f.text_field :end_epizode, 'data-provide' => 'datepicker', class: 'datepicker' %>
  </div>
</div>
  <div class="field">
    <%= f.label :value %><br>
    <%= f.text_field :value %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="field">
    <%= f.label :agent_id %><br>
    <%= f.collection_select(:agent_id, Agent.all, :id, :name) %>

  </div>
  <div class="field">
    <%= f.label :building_id %><br>
    <%= f.collection_select(:building_id, Building.all, :id, :name) %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker({
        format: 'yyyy-mm-dd',
        startDate: '-3d'
    });

    if ($('#toggle-event').prop('checked') == true){
      $("#console-event").removeClass("collapse")
    }

    $(function() {
    $('#toggle-event').change(function() {
      if ($(this).prop('checked') == true){
        $("#console-event").removeClass("collapse")
      }else{
        $("#console-event").addClass("collapse")

      }
    })
  })
  })
</script>

