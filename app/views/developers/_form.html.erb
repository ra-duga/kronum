<%= form_for(@developer) do |f| %>
  <% if @developer.errors.any? %>
    <% @developer.errors.full_messages.each do |message| %>
      <div class="alert alert-danger alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
        <strong>Внимание!</strong> <%= message %>
      </div>
    <% end %>
  <% end %>


  <div class="form-group">
    <label for="name">Название</label>
    <%= f.text_field :name, class: 'form-control', id: 'name', placeholder: 'Введите название' %>
  </div>
  <div class="form-group">
    <label for="adress">Адрес</label>
    <%= f.text_field :adress, class: 'form-control', id: 'adress', placeholder: 'Введите адрес' %>
  </div>
  <div class="form-group">
    <label for="description">Описание</label>
    <%= f.text_area :description, rows:6, class: 'form-control', id: 'adress', placeholder: 'Описание застройщика' %>
  </div>
  <div class="form-group">
    <label for="avatar">Логотип</label>
    <%= f.file_field :avatar, id:'avatar'  %>
  </div>


    <%= f.submit  class: 'btn btn-default' %>
<% end %>
