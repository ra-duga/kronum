
<div class="depot_form">
 <% if flash[:alert] %>
 <p id="notice"><%= flash[:alert] %></p>
<%= devise_error_messages! %>
 <% end %>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
 <div class="form-signin">
  <h2 class="form-signin-heading">Вход </h2>
  <div class="input-group">
    <span class="input-group-addon">@</span>
    <%= f.email_field :email,  class: 'form-control', placeholder: 'Email адрес' %>
  </div>
  <br>
  <%= f.password_field :password,  class: 'form-control', placeholder: 'Пароль' %><br>
  <% if devise_mapping.rememberable? -%>
  <div class="checkbox">
    <label>
        <%= f.check_box :remember_me %> Запомнить меня
        </label>
  </div>
  <% end -%>
  <%= f.submit "Войти", class: 'btn btn-lg btn-primary btn-block' %>
  </div>
 <% end %>
</div>


<%= render "devise/shared/links" %>
