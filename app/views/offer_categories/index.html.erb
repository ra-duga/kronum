<p id="notice"><%= notice %></p>

<h1>Listing Offer Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Offer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offer_categories.each do |offer_category| %>
      <tr>
        <td><%= offer_category.name %></td>
        <td><%= offer_category.offer %></td>
        <td><%= link_to 'Show', offer_category %></td>
        <td><%= link_to 'Edit', edit_offer_category_path(offer_category) %></td>
        <td><%= link_to 'Destroy', offer_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

