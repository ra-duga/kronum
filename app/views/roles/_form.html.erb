
<% if @role.errors.any? %>
    <% @role.errors.full_messages.each do |message| %>
        <div class="alert alert-danger alert-dismissable">
          <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
          <strong>Внимание!</strong> <%= message %>
        </div>
    <% end %>
<% end %>

<%= form_for @role do |f| %>

    <div class="form-group">
      <label for="name">Идентификатор роли</label>
      <%= f.text_field :name, class: 'form-control', id: 'name', placeholder: 'Идентификатор роли' %>
    </div>
    <div class="form-group">
      <label for="name">Название</label>
      <%= f.text_field :description, class: 'form-control', id: 'name', placeholder: 'Название' %>
    </div>

    <%= f.submit  class: 'btn btn-default' %>
<% end %>


