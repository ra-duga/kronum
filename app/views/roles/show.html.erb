
<div class="row title">
  <h1><%= @role.description %></h1>
  <%= link_to 'Изменить', edit_role_path(@role), class: 'btn btn-primary' %>
</div>
<% if notice %>
    <div class="alert alert-info alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong>Внимание!</strong> <%= notice %>
    </div>
<% end %>

<ol class="breadcrumb">
  <%= render_breadcrumbs :tag => :li, :separator => ""  %>
</ol>

<div class="row">
  <div class="col-md-6">
    <dl class="dl-horizontal">
      <dt>Идентификатор</dt>
      <dd><%= @role.name %></dd>
      <dt>Название</dt>
      <dd><%= @role.description %></dd>
      <dt>Ассоциированные пользователи</dt>
      <dd><%=@assosciated_users %></dd>
    </dl>
  </div>
</div>
