
    <% if @user.errors.any? %>
        <% @user.errors.full_messages.each do |message| %>
            <div class="alert alert-danger alert-dismissable">
              <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
              <strong>Внимание!</strong> <%= message %>
            </div>
        <% end %>
    <% end %>

    <%= form_for @user do |f| %>

    <div class="form-group">
      <label for="name">Имя и фамилия</label>
      <%= f.text_field :name, class: 'form-control', id: 'name', placeholder: 'Введите имя и фамилию' %>
    </div>
    <div class="form-group">
      <label for="name">E-mail</label>
      <%= f.text_field :email, class: 'form-control', id: 'name', placeholder: 'Введите e-mail' %>
    </div>
    <div class="form-group">
      <label for="description">Роль</label>
      <%= f.collection_select :role_id, Role.all, :id, :description, {:prompt => 'Выберите роль...'}, {:class=>'form-control'} %>
    </div>
    <div class="form-group">
      <label for="name">Пароль</label>
      <%= f.password_field :password, class: 'form-control', id: 'name', placeholder: 'Введите пароль' %>
    </div>
    <div class="form-group">
      <label for="name">Проверка праоля</label>
      <%= f.password_field :password_confirmation, class: 'form-control', id: 'name', placeholder: 'Введите пароль еще раз' %>
    </div>


    <%= f.submit  class: 'btn btn-default' %>
<% end %>


