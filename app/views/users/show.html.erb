
<div class="row title">
  <h1><%= @user.name %></h1>
  <%= link_to 'Изменить', edit_user_path(@user), class: 'btn btn-primary' %>
</div>
<% if notice %>
    <div class="alert alert-info alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <strong>Внимание!</strong> <%= notice %>
    </div>
<% end %>
<ol class="breadcrumb">
  <%= render_breadcrumbs :tag => :li, :separator => ""  %>
</ol>
<div class="row">
  <div class="col-md-6">
    <dl class="dl-horizontal">
      <dt>Имя</dt>
      <dd><%= @user.name %></dd>
      <dt>e-mail</dt>
      <dd><%= @user.email %></dd>
      <dt>Роль</dt>
      <dd><%=@user.role.description %></dd>
      <dt>Зарегистрирован в системе</dt>
      <dd><%= @joined_on %></dd>
      <dt>Последний заход в ситсему:</dt>
      <dd><%= @last_login %></dd>
    </dl>
  </div>
 </div>